<!doctype html>
<html lang="en">
<head>
    <title>{{post.title}}</title>
    <meta name="description" content="{{post.preview}}" />

    <meta property="og:title" content="{{post.title}}" />
  	<meta property="og:type" content="article" />
  	<meta property="og:url" content="https://{{site.url}}/post/{{post.slug}}" />
  	<meta property="og:image" content="{{{post.image}}}=s260-c" />
  	<meta property="og:image:width" content="260px" />
  	<meta property="og:image:height" content="260px" />
  	<meta property="og:description" content="{{post.preview}}" />

    {{>head}}
</head>

    <body>
        <div id="vertex-container" class="blog-post">
            {{>header2}}

            <section class="py-5 mb-5">
                <div class="container post-content">
                    <div class="text-center pt-5">
                        <h1 class="section-title position-relative pb-3 mt-5 mb-3">{{post.title}}</h1>
                        <span class="date">{{post.dateString}}</span>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-8 mx-auto">
                            <p class="mt-3 mb-2r"><img src="{{{post.image}}}=s1080"/></p>
                            <div class="text">{{{post.text}}}</div>
                        </div>
                    </div>
                </div>
            </section>

            {{>footer}}

        </div>

        {{>scripts}}
    </body>
</html>
